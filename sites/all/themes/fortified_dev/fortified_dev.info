name = Fortified.dev
description = Drupal implementation of the Foundation 4 framework
core = 7.x
engine = phptemplate

; Image appears on admin/appearance
screenshot = images/screenshot.png

; Reset styles with normalize
stylesheets[all][] = css/normalize.css

; Foundation framework stylesheets
stylesheets[all][] = css/foundation.min.css

; Uncompressed uncomment for dev or as a reference
;stylesheets[all][] = css/foundation.css

; Base theme specific CSS
stylesheets[all][] = css/app.css

; Theme specific CSS
stylesheets[all][] = css/app.css

; Modernizr acts as a shim for HTML5 elements for older browsers
; as well as detection for mobile devices.
scripts[] = js/vendor/custom.modernizr.js

; Foundation framework scripts.
scripts[] = js/vendor/custom.modernizr.js
scripts[] = js/foundation.min.js


; custom JS
scripts[] = js/fortified/menu.js
scripts[] = js/fortified/touch_swipe.js
scripts[] = js/fortified/footer_accordion.js

; Source order:
; http://foundation.zurb.com/docs/index.html#basicHTMLMarkup
;
; Uncompressed uncomment for development or as a reference

scripts[] = js/foundation/foundation.js
scripts[] = js/foundation/foundation.alerts.js
scripts[] = js/foundation/foundation.clearing.js
scripts[] = js/foundation/foundation.cookie.js
scripts[] = js/foundation/foundation.dropdown.js
scripts[] = js/foundation/foundation.forms.js
scripts[] = js/foundation/foundation.joyride.js
scripts[] = js/foundation/foundation.magellan.js
scripts[] = js/foundation/foundation.orbit.js
scripts[] = js/foundation/foundation.placeholder.js
scripts[] = js/foundation/foundation.reveal.js
scripts[] = js/foundation/foundation.section.js
scripts[] = js/foundation/foundation.tooltips.js
scripts[] = js/foundation/foundation.topbar.js

; Regions are output in the page.tpl.php
regions[header]         = Header
regions[navigation]     = Navigation
regions[help]           = Help
regions[highlighted]    = Highlighted
regions[slide_show]     = Slide Show
regions[content]        = Content
regions[footer_first]   = Footer first
regions[bottom_menu]    = Bottom Menu
regions[footer_last]    = Footer last
regions[modal]           = Modal

; Hidden regions
regions_hidden[] = Page top
regions_hidden[] = Page bottom

; Panel Layouts
plugins[panels][layouts] = layouts

