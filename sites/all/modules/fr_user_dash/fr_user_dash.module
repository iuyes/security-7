	public static function redirectToDashboard($get, $uid){
		if(!empty($get[1]) && $get[1] != 'password'){
			if(empty($get[2])){
				if(!empty($get[0]) && $get[0] == 'user'){
					if(!empty($get[1]) && $get[1] == $uid){
						$path = 'user/'.$uid.'/dashboard';
						$options = array('');
						$http_response_code = 302;
						drupal_goto($path);
					}
				}
			}
		}
	}



